# Example .env file. Copy this to .env and fill in the values.

# -- Server Configuration --
# The base URL for the admin panel
ADMIN_BASE=http://127.0.0.1:8014

# The port for the uvicorn server
UVICORN_PORT=8014

# -- Database Configuration --
# The URL for the database. If not set, a local SQLite database will be used.
# Example for PostgreSQL: DATABASE_URL=postgresql://user:password@host:port/database
DATABASE_URL=

# -- Security --
# Fernet key for encryption. If not set, a new key will be generated.
FERNET_KEY=

# -- LM Studio Configuration --
# The port for the LM Studio server
LM_STUDIO_PORT=1234

# -- WhatsApp Automator Configuration --
# The URL for WhatsApp Web
WHATSAPP_URL=https://web.whatsapp.com/

# The directory to store the Playwright profile
PLAYWRIGHT_PROFILE_DIR=./data/whatsapp-profile

# The interval in seconds to check for new messages
MESSAGE_CHECK_INTERVAL=2

# Whether to require a contact to have a profile to be replied to
REQUIRE_CONTACT_PROFILE=true

# The delay between each character when typing a message
TYPING_PER_CHAR=0.05

# Whether to keep the browser open after the script finishes
KEEP_AUTOMATOR_OPEN=false

# Whether the automation is active or not
AUTOMATION_ACTIVE=true

# -- Reasoner Configuration --
# The path to the reasoner payload file
REASONER_PAYLOAD_PATH=./payload_reasoner.json

# The number of messages after which the strategy should be refreshed
STRATEGY_REFRESH_EVERY=10

# -- Development Configuration --
# Whether to use the development frontend
USE_DEV_FRONTEND=0

# Whether to open the browser on start
OPEN_BROWSER=1

# -- Logging --
# The path to the log file
LOG_PATH=./logs/automation.log
